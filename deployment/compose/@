version: "2.1"

services:
  case-study:
    environment:
      - TEST_ENV
    image: "case-study:0.1"
    environment:
            - ALLOW_ANONYMOUS_LOGIN=kafka:9092
    command: /app/case-study
    ports:
      - "8000:8000"
    depends_on:
      kafka:
        condition: service_healthy 
      mariadb:
        condition: service_healthy

  zookeeper:
    image: docker.io/bitnami/zookeeper:3.7
    ports:
      - "2181:2181"
    volumes:
      - "zookeeper_data:/bitnami"
    environment:
      - ALLOW_ANONYMOUS_LOGIN=yes
  kafka:
    image: docker.io/bitnami/kafka:2
    ports:
      - "9092:9092"
    volumes:
      - "kafka_data:/bitnami"
    environment:
      - KAFKA_CFG_ZOOKEEPER_CONNECT=zookeeper:2181
      - ALLOW_PLAINTEXT_LISTENER=yes
    depends_on:
      - zookeeper
  
    healthcheck:
      test:  ["CMD", "kafka-topics.sh", "--list", "--zookeeper", "zookeeper:2181"]
      interval: 30s
      timeout: 10s
      retries: 4    

  mariadb:
    environment:
      - ALLOW_EMPTY_PASSWORD=yes
    healthcheck:
      interval: 15s
      retries: 6
      test:
        - CMD
        - /opt/bitnami/scripts/mariadb/healthcheck.sh
      timeout: 5s
    image: "docker.io/bitnami/mariadb:10.5"
    ports:
      - "3306:3306"
    volumes:
      - "mariadb_data:/bitnami/mariadb"

    healthcheck:
      interval: 15s
      retries: 6
      test: ['CMD', '/opt/bitnami/scripts/mariadb/healthcheck.sh']

volumes:
  zookeeper_data:
    driver: local
  kafka_data:
    driver: local
  mariadb_data:
    driver: local

